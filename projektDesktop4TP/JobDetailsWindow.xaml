<Window x:Class="projektDesktop4TP.JobDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projektDesktop4TP"
        mc:Ignorable="d"
        Title="JobDetailsWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="{Binding JobName}" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
        <TextBlock Grid.Row="1" Text="{Binding AgreementType}" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="2" Text="{Binding WorkType}" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="3" Text="{Binding Payment}" Margin="0,0,0,5"/>


        <Button Grid.Row="4" Content="Close" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Click="CloseButton_Click"/>

    </Grid>
</Window>
