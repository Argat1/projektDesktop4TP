<Window x:Class="projektDesktop4TP.JobbWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projektDesktop4TP"
        mc:Ignorable="d"
        Title="JobbWindow" Height="400" Width="600">
    <Grid>
        <ListBox ItemsSource="{Binding JobAds}" DisplayMemberPath="JobName" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" SelectionChanged="JobAdsListBox_SelectionChanged" x:Name="ListJob"/>
        <Button Content="Add Job Ad" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10" Click="OpenAddJobAdWindow" Visibility="Hidden" x:Name="Employer_only"/>
    </Grid>
</Window>
